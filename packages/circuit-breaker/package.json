{
  "name": "@dotdo/circuit-breaker",
  "version": "0.0.1",
  "description": "Circuit breaker pattern implementation for resilient service calls",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "circuit-breaker",
    "resilience",
    "fault-tolerance",
    "cloudflare-workers"
  ],
  "author": "Nathan Clevenger",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^3.2.4",
    "tsup": "^8.5.1"
  },
  "private": true
}
