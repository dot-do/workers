{
  "name": "cloudflare-data-poc-graph",
  "version": "1.0.0",
  "description": "Schema.org URI-based Graph Database POC using Cloudflare D1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create graph-db",
    "db:init": "wrangler d1 execute graph-db --file=./schema.sql",
    "db:migrate": "wrangler d1 execute graph-db --file=./schema.sql --remote",
    "db:query": "wrangler d1 execute graph-db --command",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "hono": "^4.6.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.94.0"
  }
}
