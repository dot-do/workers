{
  "name": "@dot-do/workers",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.2",
  "scripts": {
    "create-service": "tsx scripts/create-service.ts",
    "build-mdx": "tsx scripts/build-mdx-worker.ts",
    "build-mdx:all": "tsx scripts/build-mdx-worker.ts --all",
    "deploy:mdx": "./scripts/deploy-mdx-worker.sh",
    "deploy:yaml": "./scripts/deploy-mdx-worker.sh yaml",
    "deploy:esbuild": "./scripts/deploy-mdx-worker.sh esbuild",
    "deploy:self": "tsx scripts/self-deploy.ts",
    "deploy:yaml:self": "tsx scripts/self-deploy.ts yaml",
    "deploy:esbuild:self": "tsx scripts/self-deploy.ts esbuild",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml}\"",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --run unit",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:integration:watch": "vitest watch --config tests/integration/vitest.config.ts",
    "test:dev": "vitest run --config tests/dev/vitest.config.ts",
    "test:dev:watch": "vitest watch --config tests/dev/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "build": "pnpm -r build",
    "dev": "pnpm -r dev"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.10",
    "@cloudflare/workers-types": "^4.20250106.0",
    "@playwright/test": "^1.48.0",
    "@vitest/coverage-v8": "^3.2.0",
    "esbuild-wasm": "^0.24.2",
    "prettier": "^3.5.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "~3.2.0",
    "wrangler": "^3.99.0",
    "yaml": "^2.7.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 160
  }
}
