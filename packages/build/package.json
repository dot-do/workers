{
  "name": "@dotdo/build",
  "version": "0.0.1",
  "description": "ESBuild WASM worker for TypeScript compilation in Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "esbuild-wasm": "^0.24.0"
  },
  "devDependencies": {
    "vitest": "^3.2.4",
    "typescript": "^5.6.0",
    "tsup": "^8.5.1",
    "@cloudflare/workers-types": "^4.20240925.0"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "esbuild",
    "typescript",
    "build",
    "wasm"
  ],
  "author": "Nathan Clevenger",
  "license": "MIT"
}
