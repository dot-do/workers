{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "do",
  "main": "src/index.ts",
  "compatibility_date": "2025-07-08",
  // Compatibility flags:
  // - enable_ctx_exports: Enables ctx.exports API for automatic loopback bindings to WorkerEntrypoints
  // Note: nodejs_compat removed - causes issues with openai SDK trying to use fs
  "compatibility_flags": ["enable_ctx_exports"],
  "account_id": "b6641681fe423910342b9ffa1364c76d",
  "observability": {
    "enabled": true
  },
  // Worker Loader binding for dynamic code execution
  "worker_loaders": [
    {
      "binding": "LOADER"
    }
  ],
  // Service bindings - all core services
  "services": [
    { "binding": "AI", "service": "ai" },
    { "binding": "DB", "service": "db" },
    { "binding": "AUTH", "service": "auth" },
    { "binding": "GATEWAY", "service": "gateway" },
    { "binding": "SCHEDULE", "service": "schedule" },
    { "binding": "WEBHOOKS", "service": "webhooks" },
    { "binding": "EMAIL", "service": "email" },
    { "binding": "MCP", "service": "mcp" },
    { "binding": "QUEUE", "service": "queue" }
  ],
  // KV for caching code and results
  "kv_namespaces": [
    {
      "binding": "CODE_CACHE",
      "id": "c90947fb7d774b418744073fbf847c90"
    }
  ],
  "vars": {
    "ENVIRONMENT": "production",
    "MAX_EXECUTION_TIME": "30000",
    "DEFAULT_COMPATIBILITY_DATE": "2025-07-08"
  }
}
